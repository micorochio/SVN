<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextProgressBar">
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension"></attr>
    </declare-styleable>

    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="progressStyle" height="38" parent="@android:style/Widget.ProgressBar.Small" width="38">
        <item name="android:indeterminateDrawable">@anim/progress</item>
    </style>

    <style name="InfoBarPrimaryButton">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/toolbar_button_big</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
    </style>

    <style name="DownloadProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">15.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_download</item>
        <item name="android:progressDrawable">@drawable/progressbar_download</item>
        <item name="android:minHeight">10.0dip</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="InfoBarSecondaryButton" parent="@style/InfoBarPrimaryButton">
        <item name="android:background">@drawable/list_download_button</item>
    </style>

    <style name="IWRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:maxWidth">26.0px</item>
        <item name="android:maxHeight">15.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small</item>
        <item name="android:progressDrawable">@drawable/ratingbar_small</item>
        <item name="android:minWidth">26.0px</item>
        <item name="android:minHeight">15.0dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="IWRatingBarLarge" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">24.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_large</item>
        <item name="android:progressDrawable">@drawable/ratingbar_large</item>
        <item name="android:minHeight">24.0dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radiobtn_selector</item>
        <item name="android:button">@null</item>
    </style>

</resources>