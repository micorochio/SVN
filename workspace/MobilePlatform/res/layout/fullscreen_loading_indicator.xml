<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/fullscreen_loading_indicator"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_view_bkg"
    android:gravity="center"
    android:orientation="horizontal" 
    android:visibility="gone">

    <ProgressBar
        android:layout_width="31.0px"
        android:layout_height="31.0px"
        android:layout_gravity="center_vertical"
        android:indeterminateDrawable="@anim/progress" />

    <TextView
        android:id="@id/current_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:text="@string/loading"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black" />

</LinearLayout>