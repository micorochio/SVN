<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_error_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.0dip"
    android:background="@drawable/panel"
    android:orientation="vertical"
    android:padding="0.0dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_item_bg"
        android:baselineAligned="true"
        android:paddingLeft="5.0dip"
        android:paddingRight="2.0dip" >

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_replay"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/author"
            android:paddingLeft="2.0dip"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/hint_foreground_light" />

        <TextView
            android:id="@+id/btn_replay"
            android:layout_width="55.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/list_download_button"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/btn_reply"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/comment_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="15.0dip"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="10.0dip"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/reply_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>